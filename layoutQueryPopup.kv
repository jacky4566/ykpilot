#:kivy 1.1.0

<QueryPopup>:
	size_hint: .7,.5
	auto_dismiss: False
	BoxLayout:
		orientation: "vertical"
		padding:5
		spacing:5
		#canvas:
		#	Color:
		#		rgba: 0, 1, 0,0.2
		#	Rectangle:
		#		pos: self.pos
		#		size: self.size
					
		Label:
			id: lquery
			text: "lquery"
			text_size: self.width, None
			size_hint_y: None
			height: self.texture_size[1]
				
		BoxLayout:
			orientation: "horizontal"
			size_hint_y: None
			height: app.btH
            #canvas:
			#	Color:
			#		rgba: 0, 0, 1,0.2
			#	Rectangle:
			#		pos: self.pos
			#		size: self.size
		
			Button:
				id: bt_cancel
				size_hint_y:None
				height: app.btH
				text: "bt_cancel"
				on_press: root.on_bt_cancel()

			Button:
				id: bt_ok
				size_hint_y:None
				height: app.btH
				text: "bt_ok"
				on_press: root.on_bt_ok()
				